<section id="mmh--page-faq" style="background-color: {{ section.settings.background }};">
    <div class="section-wrapper page-width relative !py-[20px] md:!py-[80px] !px-[28px] md:!px-[60px]">
        <h2 class="font-chubbo-medium text-[24px] md:text-[36px] mb-[12px] md:mb-[24px] {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.header }}
        </h2>

        <!-- FAQ Accordion -->
        <div>
            {% for block in section.blocks %}
                <div class="faq__accordion accordion quick-add-hidden py-[24px] md:py-[40px] {% unless forloop.last %} border-b border-[#B8B8B8]{% endunless %} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
                  <details id="Details-{{ block.id }}-{{ section.id }}">
                    <summary class="">
                      <p class="font-chillax-medium text-[14px] md:text-[18px] mb-[8px] md:mb-[16px]">
                        Q{{ forloop.index }}
                      </p>
                      <div class="summary__title gap-[30px] flex justify-between">
                        {% comment %} {% render 'icon-accordion', icon: block.settings.icon %} {% endcomment %}
                        <h4 class="font-playwrite-regular uppercase text-[18px] md:text-[25px]">
                          {{ block.settings.title }}
                        </h4>
                        <div class="caret--icons font-chubbo-medium text-[28px] md:text-[36px] flex-shrink-0">
                            <span class="icon-caret-plus text-[#72CC34] leading-none block">
                            +
                            </span>
                            <span class="icon-caret-minus text-[#72CC34] leading-none block">
                            -
                            </span>
                        </div>
                      </div>
                      {% comment %} {% render 'icon-caret' %} {% endcomment %}
                      
                    </summary>
                    <div class="accordion__content rte font-chillax-medium text-[14px] md:text-[16px] mt-[16px] md:mt-[24px]" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
                      {{ block.settings.answer }}
                    </div>
                  </details>
                </div>
            {% endfor %}
        </div>
    </div>
</section>


{% schema %}
    {
        "name": "FAQs",
        "settings": [
            {
                "type": "color_background",
                "id": "background",
                "label": "Background Color"
            },
            {
                "type": "textarea",
                "id": "header",
                "label": "Header",
                "default": "FAQs"
            }
        ],
        "blocks": [
            {
                "name": "faq",
                "type": "faq",
                "settings": [
                    {
                        "type": "textarea",
                        "id": "title",
                        "label": "Question"
                    },
                    {
                        "type": "richtext",
                        "id": "answer",
                        "label": "Answer"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "FAQs"
            }
            
        ]
    }
{% endschema %}