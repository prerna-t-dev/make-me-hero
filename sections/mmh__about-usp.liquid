<style>

    .slick--usp-grid .slick-slide {
        margin-right : 20px;
    }

    @media (min-width: 990px) {
        .usp--grid .grid-box:nth-last-child(2):nth-child(3n + 1) {
            grid-column: 2 / span 2;
        }

        .usp--grid .grid-box:last-child:nth-child(3n + 2) {
            grid-column: 4 / span 2;
        }
    }
</style>  



<section id="mmh--about-usp" style="background-color: {{ section.settings.background }};">
    <div class="section-wrapper pt-[28px] md:pt-[52px] pb-[56px] md:pb-[112px] px-0 md:px-[84px] relative">  
        <div class="absolute right-0 top-1/2 -translate-y-1/2 hidden desktop-block md:!block">
            <img src="https://cdn.shopify.com/s/files/1/0500/0724/4958/files/usp--svg-graphic.svg?v=1740681412" alt="graphic">
        </div>
        <div class="flex flex-col lg:flex-row lg:pr-[10vw] relative gap-[32px] lg:gap-[94px]">
            <div class="flex-shrink-0 px-[28px] md:px-0 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                {% comment %} Subtext {% endcomment %}
                <p class="font-chillax-medium text-center mx-auto md:text-left text-[14px] md:text-[18px] uppercase mb-[24px] relative z-[2] w-fit">
                    {{ section.settings.subheader }}
                    <span class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 z-[-1]">
                        <img src="https://cdn.shopify.com/s/files/1/0500/0724/4958/files/Vector.svg?v=1740594600" alt="heart vector">

                    </span>
                </p>
                <h3 class="font-chubbo-medium text-center md:text-left text-[28px] md:text-[48px] leading-[1.1] md:mb-4">
                    {{ section.settings.header }}
                </h3>

                <a href="{{ section.settings.url }}" class="btn btn-secondary w-fit mx-auto md:ml-0 md:mr-auto hidden desktop-block md:!block">
                    {{ section.settings.cta }}
                </a>

            </div>
            <div class="pl-[28px] md:pl-0">
                <div class="usp--grid slick--usp-grid custom--grid md:grid-cols-6 gap-[20px] md:gap-[52px]">
                    {% for block in section.blocks %}
                        <div class="grid-box md:col-span-2 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                            <img class="rounded-[16px] mb-[8px] md:mb-[20px]" src="{{ block.settings.image |  img_url: 'master' }}" alt="{{ block.settings.title }}">
                            <p class="text-[13px] md:text-[18px] font-chillax-medium">
                                {{ block.settings.title }}
                            </p>
                        </div>
                    {% endfor %}
                </div>
                <a href="{{ section.settings.url }}" class="btn btn-secondary w-fit mx-auto md:hidden mt-[20px]">
                    {{ section.settings.cta }}
                </a>
            </div>
        </div>  
    </div>
</section>


<script>


    $(document).ready(function(){
        $('.slick--usp-grid').slick({
            infinite: false,
            centerMode: false,
            speed: 300,
            slidesToShow: 2.5,
            slidesToScroll: 1,
            dots: false,      
            arrows: false,   
            mobileFirst: true,
            responsive: [
                {
                    breakpoint: 990,
                    settings: "unslick"
                }
            ]
        });
    });


</script>


{% schema %}
    {
        "name": "Home - About USP",
        "settings": [
            {
                "type": "color_background",
                "id": "background",
                "label": "Background Color"
            },
            {
                "type": "textarea",
                "id": "header",
                "label": "Header",
                "default": "Why we do <br /> what we do"
            },
            {
                "type": "textarea",
                "id": "subheader",
                "label": "SubHeader",
                "default": "Where every child's the star"
            },
            {
                "type": "text",
                "id": "cta",
                "label": "Button - Text",
                "default": "about us"
            },
            {
                "type": "url",
                "id": "url",
                "label": "Button - URL"
            }
        ],
        "blocks": [
            {
                "name": "usp",
                "type": "usp",
                "limit": 5,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Graphic Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Home - About USP"
            }
        ]
    }
    {% endschema %}